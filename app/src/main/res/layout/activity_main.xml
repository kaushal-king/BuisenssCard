<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_crop"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/imageloading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_click_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Click Photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_crop" />

    <Button
        android:id="@+id/bt_crop_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crop Photo"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/bt_click_photo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bt_click_photo"
        app:layout_constraintTop_toBottomOf="@+id/bt_click_photo" />



</androidx.constraintlayout.widget.ConstraintLayout>